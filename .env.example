# NeuroSoma Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# REQUIRED: HuggingFace MedGemma Endpoint
# ===========================================

# Your HuggingFace Inference Endpoint URL
# Example: https://xxxxx.us-east-1.aws.endpoints.huggingface.cloud
HF_MEDGEMMA_ENDPOINT=

# Your HuggingFace API token
# Get one at: https://huggingface.co/settings/tokens
HF_API_TOKEN=

# ===========================================
# OPTIONAL: Public URL for sharing
# ===========================================

# Base URL for shareable plan links (defaults to http://localhost:3000)
# Example: https://neurosoma.vercel.app
NEXT_PUBLIC_BASE_URL=

# ===========================================
# OPTIONAL: Email notifications
# ===========================================

# Resend API key for sending plan emails
# Get one at: https://resend.com
RESEND_API_KEY=

# ===========================================
# OPTIONAL: LangSmith Tracing
# ===========================================

# Enable LangSmith tracing for MedGemma calls
# Set to "true" to enable
LANGSMITH_TRACING=true

# Your LangSmith API key
# Get one at: https://smith.langchain.com/settings
LANGSMITH_API_KEY=

# LangSmith project name (optional)
LANGSMITH_PROJECT=neurosoma

# LangSmith API endpoint (optional)
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# ===========================================
# OPTIONAL: Evaluation (LLM-as-Judge)
# ===========================================

# Anthropic API key for evaluation pipeline
# Get one at: https://console.anthropic.com
ANTHROPIC_API_KEY=
